---
import Layout from "./Layout.astro";
import SpotifyPlay from "../components/SpotifyPlay.astro";

const { title } = Astro.props;
---

<Layout title={title}>
  <slot />
  <footer class="w-full text-sm font-news flex justify-center px-5 mt-12">
    <div
      class="w-full flex flex-col md:flex-row md:items-center justify-between max-w-7xl"
    >
      <div
        class="flex flex-col gap-5 md:flex-row md:items-center w-full justify-between"
      >
        <p class="text-neutral-400">2024&copy; Kebabhan</p>
        <div class="md:ml-6 text-neutral-400">
          <div
            class="flex flex-wrap items-center gap-2 font-news text-sm lg:mt-auto"
          >
            <a
              href="https://x.com/kebabhan_"
              target="_blank"
              class="hover:underline hover:text-neutral-600"
            >
              X (Twitter)
            </a>
            <span class="w-[1px] h-4 bg-neutral-400"></span>
            <a
              href="https://github.com/tfarhan00"
              target="_blank"
              class="hover:underline hover:text-neutral-600"
            >
              <p>Github</p>
            </a>
            <span class="w-[1px] h-4 bg-neutral-400"></span>
            <a
              href="https://linkedin.com/in/tengkufarhan"
              target="_blank"
              class="hover:underline hover:text-neutral-600"
            >
              <p>LinkedIn</p>
            </a>
            <span class="w-[1px] h-4 bg-neutral-400"></span>
            <a
              href="https://t.me/havernut"
              target="_blank"
              class="hover:underline hover:text-neutral-600"
            >
              <p>Telegram</p>
            </a>
            <span class="w-[1px] h-4 bg-neutral-400"></span>
            <a
              href="mailto:han@arcturelab.com"
              class="hover:underline hover:text-neutral-600"
              >han@arcturelab.com</a
            >
          </div>
        </div>
        <SpotifyPlay />
      </div>
    </div>
  </footer>
</Layout>
